<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/ivPlanetImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPlanetName"
        style="@style/BlackTextStyle.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:paddingTop="5dp"
        android:text="Planet Name"
        app:layout_constraintStart_toEndOf="@id/ivPlanetImage"
        app:layout_constraintTop_toTopOf="@id/ivPlanetImage" />

    <TextView
        android:id="@+id/tvPlanetClimate"
        style="@style/BlackTextStyle.Regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:text="climate"
        app:layout_constraintStart_toStartOf="@id/tvPlanetName"
        app:layout_constraintTop_toBottomOf="@id/tvPlanetName" />

</androidx.constraintlayout.widget.ConstraintLayout>
